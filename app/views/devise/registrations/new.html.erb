<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= errors_for resource %>

  <div class="form-group">
    <%= f.label :email, "Email", class: "font-weight-bold" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Mot de passe", class: "font-weight-bold" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe", class: "form-control" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= @minimum_password_length %> caractères minimum</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation", class: "font-weight-bold" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, "Prénom", class: "font-weight-bold" %>
    <%= f.text_field :first_name, placeholder: "Prénom", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Téléphone", class: "font-weight-bold" %>
    <%= f.text_field :phone, placeholder: "Téléphone", class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to "Retour", :back, class: "btn btn-outline-secondary" %>
    <%= f.submit "Inscription", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
