
<% links = [] %>

<%- if controller_name != 'sessions' %>
  <% links << (link_to "Connexion", new_session_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <% links << (link_to "Inscription", new_registration_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <% links << (link_to "Mot de passe oublié ?", new_password_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <% links << (link_to "Pas reçu le mail de confirmation ?", new_confirmation_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <% links << (link_to "Pas reçu le mail de débloquage ?", new_unlock_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% links << (link_to "Connexion avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)) %>
  <% end -%>
<% end -%>

<% if links.present? %>
  <hr>
  <%= links.join(' · ').html_safe %>
<% end %>
